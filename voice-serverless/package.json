{
  "name": "voice-serverless",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "tsc --noEmit",
    "start": "twilio-run --functions-folder dist/functions --assets-folder dist/assets",
    "deploy": "twilio-run deploy --functions-folder dist/functions --assets-folder dist/assets --override-existing-project",
    "build": "tsc && npm run build:copy-assets",
    "build:copy-assets": "copyfiles src/assets/* src/assets/**/* --up 2 --exclude **/*.ts dist/assets/",
    "prestart": "npm run build",
    "predeploy": "npm run build",
    "watch": "tsc -w",
    "watch:twilio-run": "nodemon --watch dist --exec \"twilio-run --functions-folder dist/functions --assets-folder dist/assets\"",
    "dev": "concurrently \"npm:watch\" \"npm:watch:twilio-run\""
  },
  "dependencies": {
    "@twilio-labs/serverless-runtime-types": "^1.1",
    "@twilio/runtime-handler": "2.0.0",
    "twilio": "^3.56"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "copyfiles": "^2.2.0",
    "nodemon": "^3.1.0",
    "twilio-run": "^4.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "18"
  }
}
